<h1>New Publication</h1>
<%= form_with model: @publication do |form| %>
<div>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
    <% @publication.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
    <% end %>
    </div>

<div>
    <%= form.label :contents %><br>
