    </div>

<div>
    <%= form.label :duration %><br>
    <%= form.text_area :duration %>
    <% @publication.errors.full_messages_for(:duration).each do |message| %>
        <div><%= message %></div>
    <% end %>
    </div>

<div>
    <%= form.label :modality %><br>
    <%= form.text_area :modality %>
    <% @publication.errors.full_messages_for(:modality).each do |message| %>
        <div><%= message %></div>
    <% end %>
    </div>

<div>
    <%= form.label :likes_number %><br>
    <%= form.text_area :likes_number %>
    <% @publication.errors.full_messages_for(:likes_number).each do |message| %>
        <div><%= message %></div>
    <% end %>
    </div>

<div>
    <%= form.submit %>
</div>
<% end %>

