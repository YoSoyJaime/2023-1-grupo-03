
#Show a review and its details, also the option to edit or delete it

<h1>Review Show Page</h1>

<p><%= @review.feedback %></p>
<p><%= @review.score %></p>
<br><% if @review.user_emit_id == current_user.id %>
<%= link_to 'Edit', edit_user_review_path(@review.user_receive_id, @review.id) %> <br>
<%= link_to 'Destroy', user_reviews_path(@review.user_receive_id, @review.id), data: {turbo_method :delete, turbo_confirm: "Are you sure?"} %> <br>
<%= link_to 'Back', user_reviews_path(@review.user_receive_id) %>
<% end %>





